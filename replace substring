def replace_substring(string: str, str1: str, str2: str) -> str:
    return string.replace(str1, str2)

# Example usage
string = input("Enter String:\n")
str1 = input("Enter substring which has to be replaced:\n")
str2 = input("Enter substring with which str1 has to be replaced:\n")

result = replace_substring(string, str1, str2)
print("String after replacement:")
print(result)
